{
  "expo": {
    "name": "hopps",
    "slug": "hopps",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.hopps.ios"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/hopps-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "app.hopps"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-secure-store",
        {
          "configureAndroidBackup": true,
          "faceIDPermission": "Allow $(PRODUCT_NAME) to access your Face ID biometric data."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "5337a075-882c-4be5-981a-a7891f5542ee"
      }
    },
    "owner": "hopps"
  }
}
